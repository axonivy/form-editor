{
  "private": true,
  "name": "@axonivy/form-editor-root",
  "engines": {
    "node": ">=20.10.0"
  },
  "volta": {
    "node": "22.17.0"
  },
  "scripts": {
    "ci": "npm install && npm run package && npm run type && (npm run lint:ci || true) && npm run test:ci && npm run i18n:ci",
    "clean": "lerna run clean",
    "build": "tsc --build && tscp --build",
    "package": "lerna run package",
    "build:clean": "lerna run build:clean",
    "type": "lerna run type",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "i18n:extract": "lerna run i18n:extract",
    "i18n:ci": "lerna run i18n:ci",
    "protocol": "npm run -w @axonivy/form-editor-protocol",
    "dev": "npm run -w @axonivy/form-editor-standalone dev",
    "test": "npm run -w @axonivy/form-editor test",
    "test:ci": "lerna run test:ci",
    "webtest": "lerna run webtest --",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws -t semver -u",
    "publish:next": "lerna publish --exact --canary --preid next --tag-version-prefix beta --pre-dist-tag next --no-git-tag-version --no-push --ignore-scripts --yes"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~12.0.7-next.596",
    "@lerna-lite/cli": "^3.12.1",
    "@lerna-lite/publish": "^3.12.1",
    "@lerna-lite/run": "^3.12.1",
    "@lerna-lite/version": "^3.12.1",
    "@types/node": "^22.10.2",
    "eslint-plugin-i18next": "^6.1.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.0",
    "typescript-cp": "^0.1.9",
    "i18next-parser": "^9.3.0"
  },
  "workspaces": [
    "packages/*",
    "integrations/*",
    "playwright"
  ]
}
